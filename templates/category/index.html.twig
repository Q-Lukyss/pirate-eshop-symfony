{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="container mt-4">
        <h1 class="mb-3">Catégorie : {{ categorie.name }}</h1>
        <p class="text-muted">Cette catégorie contient <strong>{{ categorie.products|length }}</strong> produit(s).</p>

        {% if categorie.products|length > 0 %}
            <div class="row mt-4">
                {% for product in categorie.products %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="{{ asset('upload/' ~ product.illustration) }}" class="card-img-top" alt="{{ product.name }}">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text text-truncate">{{ product.description|raw }}</p>
                                <p class="card-text fw-bold">{{ product.getPriceWt() }}
                                    Piece(s) d'Or
                                </p>
                                <a href="{{ path('app_product', {slug: product.slug}) }}" class="btn btn-primary mt-auto">Afficher</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning mt-4">Aucun produit disponible dans cette catégorie.</div>
        {% endif %}
    </div>


</div>
{% endblock %}
