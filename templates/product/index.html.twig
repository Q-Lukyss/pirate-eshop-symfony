{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

    <div class="container my-5">
        <p><a href="{{ path('app_category', {slug: product.category.slug}) }}">{{ product.category.name }}</a> > <a href="{{ path('app_product', {slug: product.slug}) }}">{{ product.name }}</a></p>
        <div class="row align-items-center">

            <!-- Image du produit -->
            <div class="col-md-6 text-center">
                <img src="{{ asset('upload/' ~ product.illustration) }}"
                     class="img-fluid rounded shadow-lg"
                     alt="{{ product.name }}">
            </div>

            <!-- Infos du produit -->
            <div class="col-md-6">
                <h1 class="display-4 fw-bold text-dark">{{ product.name }}</h1>
                <p class="lead text-muted mt-3">{{ product.description|raw }}</p>

                <!-- Prix -->
                <div class="mt-4">
                    <p class="fs-5 mb-2"><strong>Prix HT :</strong>
                        <span class="text-dark fw-semibold">{{ product.price | number_format(2, ',', ' ') }}</span> pièces d'or
                    </p>
                    <p class="fs-5 mb-2"><strong>TVA :</strong>
                        <span class="text-dark fw-semibold">{{ product.tva }}%</span>
                    </p>
                    <p class="fs-3 fw-bold text-success mt-2">
                        <strong>Prix TTC :</strong>
                        {{ product.getPriceWt() | number_format(2, ',', ' ') }} pièces d'or
                    </p>
                </div>

                <!-- Bouton Ajouter au panier -->
                <div class="mt-4">
                    <a href="#" class="btn btn-lg btn-primary px-4 py-2 shadow-sm">
                        <i class="fas fa-shopping-cart"></i> Ajouter au panier
                    </a>
                </div>
            </div>

        </div>
    </div>



{% endblock %}
