{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
    <div class="container mt-4">

        <h1 class="mb-4">Mon panier</h1>

        <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-danger">Vider le panier</a>

        {% if cart is not empty %}
            {# Calcul du total du panier #}
            {% set total = 0 %}
            {% for product in cart %}
                {% set total = total + (product.object.priceWt() * product.qty) %}
            {% endfor %}

            <div class="row">
                {# Colonne de gauche : liste des produits #}
                <div class="col-md-8">
                    {% for product in cart %}
                        <div class="card mb-3">
                            <div class="row g-0 align-items-center">
                                <div class="col-auto">
                                    <img src="{{ asset('upload/' ~ product.object.illustration) }}"
                                         alt="{{ product.object.name }}"
                                         class="img-fluid rounded-start"
                                         style="width:120px; height:auto;">
                                </div>
                                <div class="col">
                                    <div class="card-body">
                                        <h5 class="card-title mb-2">{{ product.object.name }}</h5>

                                        {# Section quantité avec boutons +/- #}
                                        <div class="d-flex align-items-center mb-2">
                                            <a href="{{ path('app_cart_decrement', { id: product.object.id }) }}"
                                               class="btn btn-outline-secondary btn-sm me-2">
                                                -
                                            </a>
                                            <span class="fw-bold">{{ product.qty }}</span>
                                            <a href="{{ path('app_cart_increment', { id: product.object.id }) }}"
                                               class="btn btn-outline-secondary btn-sm ms-2">
                                                +
                                            </a>
                                        </div>

                                        <p class="mb-1">Prix unitaire :
                                            <strong>{{ product.object.priceWt()|price }}</strong>
                                        </p>
                                        <p class="mb-1">Total :
                                            <strong>{{ (product.object.priceWt() * product.qty)|price }}</strong>
                                        </p>
                                        {# Bouton pour supprimer l'article du panier #}
                                        <a href="{{ path('app_cart_remove', { id: product.object.id }) }}"
                                           class="btn btn-danger btn-sm mt-2">
                                            Supprimer
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {# Colonne de droite : récapitulatif du total #}
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header fw-bold">
                            Récapitulatif
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                Sous-total :
                                <span class="fw-bold float-end">
                                {{ total|price }}
                            </span>
                            </p>
                            {# Si vous avez des frais de livraison ou autres #}
                            {#
                            <p class="card-text">
                                Frais de livraison :
                                <span class="fw-bold float-end">5,00 €</span>
                            </p>
                            #}

                            <hr>
                            <p class="card-text fs-5">
                                Total :
                                <span class="fw-bold float-end">
                                {{ total|price }}
                            </span>
                            </p>
                            <a href="#" class="btn btn-primary w-100 mt-3">
                                Valider mon panier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-info" role="alert">
                Votre panier est vide.
            </div>
        {% endif %}

    </div>
{% endblock %}
